@model IEnumerable<BTL_Web_Cinema.Models.Entities.Phim>

@{
    ViewBag.Title = "DatVe";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Đặt vé</h2>
@foreach (var item in Model)
{
    <div>
        <hr />
        <div style="width:100%;height:100%;display:flex">
            <div>
                <img style="width=300px;height:300px" src="~/Content/Images/@item.Anh" />
            </div>
            <div style="margin:20px">
                <span>Tên phim:</span>
                <span> @item.TenPhim</span>
                <br />
                <span>Thể loại phim:</span>
                <span> @item.TheLoai.TenTheLoai</span>
                <br />
                <span>Mô tả phim:</span>
                <span> @item.MoTaPhim</span>
                <br />
                <span>Giá vé:</span>
                <span> @item.GiaNhapPhim</span>
                <br />
                <span>Giờ chiếu:</span>
                <br />
                @Html.Action("GioChieu",new {id=@item.MaPhim})
            </div>         
        </div>
    </div>
}



