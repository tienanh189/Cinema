@model BTL_Web_Cinema.Models.Entities.Phim

@{
    ViewBag.Title = "RenderDetail";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Chi tiết phim</h2>
<div>
    <hr />
    <div style="width:100%;height:100%;display:flex">
        <div >
            <img style="width=300px;height:300px" src="~/Content/Images/@Html.DisplayFor(model => model.Anh)" />
        </div>
        <div style="margin:20px">
            <span>Tên phim:</span>
            <span> @Html.DisplayFor(model => model.TenPhim)</span>
            <br />
            <span>Thể loại phim:</span>
            <span> @Html.DisplayFor(model => model.TheLoai.TenTheLoai)</span>
            <br />
            <span>Mô tả phim:</span>
            <span> @Html.DisplayFor(model => model.MoTaPhim)</span>
            <br/>  
            <span>Giá vé:</span>
            <span> @Html.DisplayFor(model => model.GiaNhapPhim)</span>
            <br />
            <span>Giờ chiếu:</span>
            <br />
            @Html.Action("GioChieu", new { id = Model.MaPhim})
        </div>

    </div>
</div>
<br />
<p>
    @Html.ActionLink("Trở về", "Index")
</p>
