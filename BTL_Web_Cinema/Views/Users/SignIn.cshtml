
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Đăng nhập</h2>

<form style="margin-left:20%" action="/Users/SigninCheck" method="get" class="form-control-static form-horizontal">
    <div class="form-group">
        <label>Tên đăng nhập:</label>
        <br />
        <input style="width:500px" class="form-control" type="text" required name="username" value="@ViewBag.user" />
    </div>
    <br />


    <div class="form-group">
        <label>Mật khẩu:</label>
        <br />
        <input style="width:500px" class="form-control" type="password" required name="password" value="@ViewBag.pass" />
    </div>

    <div class="form-group">
        <input style="margin-left:1%;" type="checkbox" name="rememberUser"/>
        <span>Lưu tài khoản và mật khẩu</span> 
    </div>

    <button class="btn btn-success" type="submit">Đăng nhập</button>
    <br />
    @if (ViewBag.tb != null)
    {
        <p style="color:red">@ViewBag.tb</p>
    }
</form>

